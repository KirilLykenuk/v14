#include <stdio.h>

int main() {
    double A, B, C;
    

    printf("Введіть значення A: ");
    scanf("%lf", &A);
    
    printf("Введіть значення B: ");
    scanf("%lf", &B);
    
    printf("Введіть значення C: ");
    scanf("%lf", &C);
    

    if (A < B && B < C) {

        A *= 2;
        B *= 2;
        C *= 2;
    } else {
      
        A = 1 / A;
        B = 1 / B;
        C = 1 / C;
    }
    
    printf("Результат:\n");
    printf("A = %.2lf\n", A);
    printf("B = %.2lf\n", B);
    printf("C = %.2lf\n", C);
    
    return 0;
}
